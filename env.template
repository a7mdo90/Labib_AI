# Labib Telegram Bot Environment Variables
# Copy this file to .env and fill in the missing values below

# Telegram Bot Configuration
TELEGRAM_TOKEN=your_telegram_bot_token_here

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Google Cloud Vision Configuration
# Path to your Google Cloud Vision service account key file
GOOGLE_APPLICATION_CREDENTIALS=./vision-ocr-key.json
# Your Google Cloud Project ID (from the key file)
GOOGLE_CLOUD_PROJECT_ID=our-highway-326316

# Instagram Configuration (Optional - for future use)
IG_USER_ID=your_instagram_user_id_here
IG_ACCESS_TOKEN=your_instagram_access_token_here

# Database Configuration
CHROMA_DB_PATH=./chroma_store

# Application Configuration
LOG_LEVEL=INFO
ENVIRONMENT=development

# Optional: Override default paths
# CHROMA_DB_PATH_OVERRIDE=/app/chroma_store
# LOG_FILE_PATH=./logs/bot.log
